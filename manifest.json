{
    "manifest_version": 2,
    "name": "Float scanner",
    "description": "This extension allows you to scan floats on steam market",
    "version": "1.1.1",
    "version_name": "1.1.1 beta",
    "author": "RouNdeL",
    "short_name": "Float scanner",
    "browser_action": {
        "default_icon": "img/icon.png"
    },
    "options_page": "html/popup.html",
    "permissions": [
        "activeTab",
        "storage",
        "notifications",
        "cookies",
        "*://api.csgofloat.com/",
        "http://steamcommunity.com/market/*",
        "https://steamcommunity.com/market/*",
        "http://*.steamcommunity.com/market/*",
        "https://*.steamcommunity.com/market/*"
    ],
    "content_scripts": [
        {
            "run_at": "document_end",
            "js": [
                "js/support.js",
                "js/lz-string.js",
                "js/jquery.min.js",
                "js/loadingoverlay.min.js",
                "js/dateformat.js",
                "js/progress.js",
                "js/main.js"
            ],
            "matches": [
                "http://steamcommunity.com/market/*",
                "https://steamcommunity.com/market/*",
                "http://*.steamcommunity.com/market/*",
                "https://*.steamcommunity.com/market/*"
            ]
        }
    ],
    "background": {
        "scripts": [
            "js/support.js",
            "js/notification.js"
        ],
        "persistent": false
    }
}